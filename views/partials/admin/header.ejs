        <!-- side bar option highlight -->
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const menuLinks = document.querySelectorAll(".menu-item a.menu-link");
        
                // Function to set the active menu item based on the current URL
                function setActiveMenu() {
                    const currentPath = window.location.pathname; // Get the current path
                    menuLinks.forEach(link => {
                        if (link.getAttribute("href") === currentPath) {
                            link.classList.add("active");
                        } else {
                            link.classList.remove("active");
                        }
                    });
                }
        
                // Initial setup to highlight the menu
                setActiveMenu();
        
                // Optional: Handle clicks to ensure highlight is updated immediately
                menuLinks.forEach(link => {
                    link.addEventListener("click", function () {
                        menuLinks.forEach(item => item.classList.remove("active"));
                        this.classList.add("active");
                    });
                });
            });
        </script>
        
        