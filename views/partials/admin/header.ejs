    <style>
        /* Add a smooth transition for hover effects */
        .menu-item a.menu-link {
            display: flex;
            align-items: center;
            padding: 10px;
            border-radius: 5px;
            transition: all 0.3s ease;
            position: relative;
            text-decoration: none;
        }

        /* Add an icon background */
        .menu-item a.menu-link i {
            display: flex;
            justify-content: center;
            align-items: center;
            width: 40px;
            height: 40px;
            background-color: #e3e6e8;
            border-radius: 50%;
            margin-right: 10px;
            transition: background-color 0.3s ease, transform 0.3s ease;
        }

        /* On hover, change background color and scale the icon */
        .menu-item a.menu-link:hover i {
            background-color: #6e7e6e;
            transform: scale(1.2);
        }

        /* Add hover effect for the link */
        .menu-item a.menu-link:hover {
            background-color: #526852;
            color: #ffffff;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
            transform: translateX(5px);
        }

        /* Active link styling */
        .menu-item a.menu-link.active {
            background-color: #6e7e6e;
            color: #ffffff;
            font-weight: bold;
        }

        /* Add subtle border and shadow */
        .menu-aside {
            padding: 20px;
            border-right: 2px solid #d3d3d3;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        /* Style the dropdown menu items */
        .dropdown-menu {
            border-radius: 8px;
            box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.15);
            animation: fadeIn 0.3s ease;
        }

        /* Keyframes for fade-in animation */
        @keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(-10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .menu-item a.menu-link.active {
            background-color: #6e7e6e;
            color: #ffffff;
            font-weight: bold;
        }

    </style>
</head>

