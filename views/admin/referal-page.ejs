<%- include("../../views/partials/admin/header") %>
    <title>Admin Referral Page</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .referral-code {
            font-family: monospace;
            font-weight: bold;
            background-color: #f0f0f0;
            padding: 2px 4px;
            border-radius: 4px;
        }

        .referral-points {
            font-weight: bold;
            color: #28a745;
        }

        .nav-tabs .nav-link {
            cursor: pointer;
        }

        .table-responsive {
            max-height: 600px;
            overflow-y: auto;
        }
    </style>
    </head>

    <body>
        <div class="container mt-5">
            <h1 class="mb-4">Referral Management</h1>

            <ul class="nav nav-tabs mb-4" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <a class="nav-link active" id="persons-tab" data-bs-toggle="tab" data-bs-target="#persons"
                        type="button" role="tab" aria-controls="persons" aria-selected="true">Persons with Referral
                        Codes</a>
                </li>
               
            </ul>

            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="persons" role="tabpanel" aria-labelledby="persons-tab">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Referral Code</th>
                                    <th>Referral Points</th>
                                </tr>
                            </thead>
                            <tbody>
                                <%if(users.length>0){%>
                                    <%users.forEach(user=>{%>
                                        <tr>
                                            <td>
                                                <%= user.name%>
                                            </td>
                                            <td>
                                                <%= user.email%>
                                            </td>
                                            <td><span class="referral-code">
                                                    <%= user.referralCode%>
                                                </span></td>
                                            <td><span class="referral-points">
                                                    <%= user.referralPoint%>
                                                </span></td>
                                           
                                        <%})%>
                                            <%}else{%>
                                                <tr>
                                                    <td>There is no user with Referrals..</td>
                                                </tr>
                                                <%}%>
                            </tbody>
                        </table>
                    </div>
                </div>
               
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
        
    </body>

    </html>