            color: #6c757d;
            margin-left: 10px;
        }

        .quantity {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
        }

        .quantity button {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
            padding: 5px 10px;
            font-size: 16px;
            cursor: pointer;
        }

        .quantity span {
            padding: 5px 15px;
            border-top: 1px solid #ced4da;
            border-bottom: 1px solid #ced4da;
        }

        .add-to-cart {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            border-radius: 4px;
        }

        .add-to-cart:hover {
            background-color: #0056b3;
        }

        .product-meta {
            margin-top: 20px;
            font-size: 14px;
            color: #6c757d;
        }

        .material-filter li {
            display: inline-block;
            margin-right: 10px;
        }

        .material-filter li a {
            color: #333;
            text-decoration: none;
        }

        .material-filter li.active a {
            color: #ff4500;
            /* Highlight the selected material */
            font-weight: bold;
        }

        /* already in wishlist  */
        .wishlist-added {
            color: red;
        }

        /* Common Styles */
        .option-title {
            display: block;
            font-size: 16px;
            font-weight: 600;
            margin-bottom: 15px;
            color: #333;
        }

        .required {
            color: #e51f1f;
            margin-left: 4px;
        }

        /* Material Options Styling */
        .material-options {
            display: grid;
            gap: 12px;
            margin-top: 10px;
        }

        .material-option {
            display: flex;
            align-items: center;
            padding: 12px 15px;
            border: 1px solid #e5e5e5;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
            background: #fff;
        }

        .material-option:hover {
            border-color: #3BB77E;
            background: #f8f9fa;
        }

        .material-check {
            position: relative;
            width: 20px;
            height: 20px;
            border: 2px solid #ddd;
            border-radius: 50%;
            margin-right: 12px;
            transition: all 0.2s ease;
        }

        .material-option input[type="radio"] {
            display: none;
        }

        .material-option input[type="radio"]:checked+.material-check {
            border-color: #3BB77E;
        }

        .material-option input[type="radio"]:checked+.material-check:after {
            content: '';
            position: absolute;
            width: 10px;
            height: 10px;
            background: #3BB77E;
            border-radius: 50%;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
        }

        .material-name {
            font-weight: 500;
            margin-right: 10px;
            color: #333;
        }

        .material-desc {
            font-size: 13px;
            color: #777;
