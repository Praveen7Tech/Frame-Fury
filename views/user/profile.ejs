        .repay-btn:hover {
            background-color: #287ba3;
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.15);
            transform: translateY(-2px);
        }

        .repay-btn:active {
            background-color: #1a5d7c;
            box-shadow: none;
            transform: translateY(0);
        }

        .faded-btn {
            background-color: red;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 8px;
            opacity: 0.5;
            /* Makes the button look faded */
            cursor: not-allowed;
